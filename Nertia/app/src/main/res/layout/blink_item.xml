<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/blink_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_ripple"
    android:clickable="true"
    android:focusable="true"
    android:paddingBottom="6dp"
    android:paddingEnd="10dp"
    android:paddingStart="10dp"
    android:paddingTop="6dp">

    <android.support.v7.widget.CardView
        android:id="@+id/per_vid_card_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:background="@android:color/white"
        android:clickable="true"
        android:elevation="8dp"
        android:focusable="true"
        app:cardElevation="12dp"
        card_view:cardCornerRadius="3dp"
        tools:targetApi="lollipop">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/white_ripple">

            <ImageView
                android:id="@+id/per_thumb"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:clickable="true"
                android:contentDescription="@string/card_img"
                android:focusable="true"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/per_vid_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/per_thumb"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="12dp"
                android:background="@color/card_title"
                android:clickable="true"
                android:elevation="10dp"
                android:focusable="true"
                android:padding="2dp"
                android:text="@string/card_title"
                android:textColor="@android:color/white"
                android:textSize="21sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="126dp" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <!--TextView
        android:id="@+id/blink_vidname"
